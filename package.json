{
  "name": "shopify-search",
  "version": "0.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server",
    "dev:client": "npm start --prefix client",
    "test:server": "cross-env NODE_ENV=test jest --debug",
    "test:client": "npm test --prefix client",
    "build:client": "npm run build --prefix client",
    "heroku-postbuild": "cross-env NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "config": "^3.3.3",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.8.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.0",
    "nodemon": "^2.0.6"
  },
  "jest": {
    "testPathIgnorePatterns": ["client"]
  }
}
